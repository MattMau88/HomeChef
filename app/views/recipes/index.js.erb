function replaceRecipes (innerHTML) {
  const recipes = document.getElementById('recipes');
  recipes.innerHTML = innerHTML;
  console.log("innerHTML", innerHTML)
  let noResultMessage = document.getElementById("no-result-msg")
  if (innerHTML.length > 0){
    noResultMessage.classList.add("invisible")
  } else {
    noResultMessage.classList.remove("invisible")
  }
}
if ('<%= @filter %>' === "[]") {
  replaceRecipes("<%= j render 'recipes/recipe_list', recipes: Recipe.all %>");

}
else {
  replaceRecipes("<%= j render 'recipes/recipe_list', recipes: @recipes %>");
}


<!-- SECTION FOR RECIPE CARDS THAT THIS USER CREATED -->

<h1>Your uploaded recipes</h1>

<div class="container cards">
  <div class="row">

      <% @recipes_user.each do |recipe| %>
        <div class="card child-row" style="width: 50rem;">

          <div class="card-recipe-img">
            <% if recipe.photo.attached? %>
                <%= link_to recipe_path(recipe) do %>
                  <%= cl_image_tag recipe.photo.key , class:"card-img-top card-recipe-img"%>
                <% end %>
            <% end %>
          </div>

          <div class="card-body">
            <h5 class="card-title"><%= recipe.name %></h5>
            <p class="card-text"><%= recipe.description_teaser%>...<%= link_to "More details", recipe_path(recipe)%></p>
          </div>

        </div>
      <% end %>

  </div>
</div>

<div class="center">
  <%= render "shared/card_user_profile" %>
</div>


<div class="center2">
  <div class="chef-card-container">
    <div>
      <% if user_signed_in? && policy(@user).edit? %>

      <div class="row-reverse">
        <div class="">
          <button class="btn btn-color">
            <%= link_to 'Edit', edit_user_path(@user), class: "" %> <i class="fas fa-user-edit"></i>
          </button>
        </div>

        <div class="" >
          <button class="btn btn-danger">
            <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: "" %>
              <i class="fas fa-trash"></i>
            <% end %>
          </button>
        </div>
      </div>

      <div class="p-5">
          <div class="row">
            <div class="column">
              <h5><strong>Name: </strong><%=@user.first_name.capitalize + ' ' + @user.last_name.capitalize  %></h5>
              <h5><strong>Email: </strong><%= @user.email %></h5>
            </div>

            <div class="column">
              <h5><strong>About me:</strong> I enjoy cooking and coding, Tacos are my speciality but I love me a good tuna salad</h5>
            </div>
          </div>
        <div class="row">
          <div class="column">
            <h5><strong>Address: </strong><%= @user.address %></h5>
            <h5><strong>Favorite Cuisines:</strong> Tuna, Mexican</h5>
          </div>
        </div>
        </div>

            <%= render "shared/sub_banner" %>
            <div id="carouselExampleIndicators" class="carousel slide center2" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <% @recipes_user.each_with_index do |recipe, index| %>
                <% if index == 0  %>
                  <div class="carousel-item active">
                    <%= render "shared/recipe_card_profile", recipe: recipe    %>
                  </div>
                <% else  %>
                  <div class="carousel-item">
                    <%= render "shared/recipe_card_profile", recipe: recipe    %>
                  </div>
                <% end %>
              <% end %>
            </div>


          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

          <ul class="list-group">
            <% @orders_user.each_with_index do | order| %>
            <li class="list-group-item">
                <p>Ingedrients set: <i><b>Mexican</b></i></p>
                <p>Portions: <%= order.amount_portion %></p>
                <p>Delivery date: <%= order.delivery_date %></p>
              <% end %>
            </li>
            <li class="list-group-item"></li>
            <li class="list-group-item"> </li>
            <li class="list-group-item"></li>
            <li class="list-group-item"></li>
          </ul>

      </div>
    </div>
  </div>
</div>





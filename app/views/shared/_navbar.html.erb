<div class="navbar-container">
  <div class="container d-flex justify-content-between align-items-center">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "logo" %>
    <% end %>
    <div class="navbar-search"> <%= render 'shared/search' %></div>
    <div class="links-container">
      <%= link_to "Weekly Menu", weekly_ingredient_list_path(1), class: "navbar-link" %>
      <%= link_to "Recipes", recipes_path, class: "navbar-link" %>
      <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-navbar", style:"color: white; font-weight: lighter; font-size: 16px;" %>
      <% if user_signed_in? %>
        <div class="dropdown">
          <%= cl_image_tag current_user.avatar, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "My Cookbook", favorite_recipes_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>

      <% else %>
        <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
        <%= link_to "Register", new_user_registration_path, class: "navbar-link" %>
        
      <% end %>
    </div>
  </div>
</div>


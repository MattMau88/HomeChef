<div class="chef-card-container-on-profile">
  <img class="avatar-profile-on-recipeshow" src="<%= @user.photo.attached? ? (cl_image_path @user.photo.key) : (image_path "defaultprofile.png")%>" >
  <div class="info-container">
    <h4><strong><%= @user.first_name.capitalize + " " + @user.last_name.capitalize %></strong></h4>
    <p><strong> Biography:   </strong><%= @user.biography.present? ? (@user.biography.slice(0..60)) : ("Passionate chef who loves to share his creations and enable others to cook") %></p>
  </div>
</div>


